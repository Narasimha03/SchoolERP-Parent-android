                                    android:adjustViewBounds="true"
                                    android:scaleType="center"
                                    android:src="@drawable/dashboard_studentcard_icon"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.3" />


                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
