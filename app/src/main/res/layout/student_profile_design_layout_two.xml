                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="0.5"
                                android:gravity="center"
                                android:textColor="@android:color/black" />

                        </LinearLayout>


